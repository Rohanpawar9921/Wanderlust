<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">

    <div class="col-8 offset-3">
        <h1>Listing details </h1>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listings.image.url %>" class="card-img-top show-img" alt="Listing image">
        <div class="card-body">
            <p class="card-text">
                <b><%= listings.title %></b><br>
                <%= listings.description %> <br>
                <!-- //making according to indian standerd -->
                &#x20b9; <%= listings.price.toLocaleString("en-IN") %> <br> 
                <%= listings.location %> <br>
                <%= listings.country %>
            </p>
        </div>
    </div>

    <div class="btns">

        <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
        
        <form action="/listings/<%= listings._id %>?_method=DELETE" method="post" >
            <button class="btn btn-dark offset-5">Delete</button>
        </form>

    </div>
    
</div>
