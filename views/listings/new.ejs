<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Create new route</h1>

        <form action="/listings" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="Listing[title]" id="" placeholder="Enter title" class="form-control">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="Listing[description]" id="" placeholder="Enter description"  class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label for="image.url" class="form-label">Image Link</label>
                <input type="text" name="Listing[image.url]" id="" placeholder="Enter Image URL" class="form-control">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="price" name="Listing[price]" id="" placeholder="Enter Price" class="form-control">
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="Listing[country]" placeholder="India" class="form-control">
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="Listing[location]" id="" placeholder="Enter Location" class="form-control">
            </div>

            

            <button class="btn btn-dark add-btn mt-3">Save</button>
            <br><br>
        </form>

        
    </div>
</div>
