<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
    <div class="col-8 offset-2">

        <h1>Edit this route</h1>
        <form method="post" action="/listings/<%= listings._id %>?_method=PUT">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="Listing[title]" id="" placeholder="Enter titles" value="<%= listings.title %>" class="form-control">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="Listing[description]" id=""  class="form-control"><%= listings.description %></textarea>
            </div>

            <div class="mb-3">
                <label for="image.url" class="form-label">Image URL</label>
                <input type="text" name="Listing[image.url]" id="" placeholder="Enter image url" class="form-control" value="<%= listings.image.url %>">
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="price" name="Listing[price]" id="" placeholder="Enter Price" class="form-control" value="<%= listings.price %>">
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="Listing[country]" placeholder="Enter country" class="form-control" value="<%= listings.country %>">
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="Listing[location]" id="" placeholder="Enter Location" class="form-control" value="<%= listings.location %>">
            </div>

            <button class="btn btn-dark edit-btn mt-3">Edit</button>
            <br><br>
        </form>
    </div>
</div>
